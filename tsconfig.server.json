{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["server.ts", "src/game/**/*.ts", "src/inference/**/*.ts", "src/socket/**/*.ts"],
  "exclude": ["node_modules", ".next", "src/app/**", "src/components/**", "src/hooks/**"]
}
